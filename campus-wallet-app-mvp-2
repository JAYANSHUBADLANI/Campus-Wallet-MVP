    <script>
        function switchTab(tabName) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));
            
            // Show selected section
            document.getElementById(tabName + '-section').classList.add('active');
            
            // Update nav items
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => item.classList.remove('active'));
            event.currentTarget.classList.add('active');
        }

        function toggleSwitch(element) {
            element.classList.toggle('active');
        }

        function toggleParentMode(element) {
            element.classList.toggle('active');
            const badge = document.getElementById('parentBadge');
            if (element.classList.contains('active')) {
                badge.style.display = 'block';
                // Show alert
                showNotification('Parent mode enabled. Monthly summary will be shared.');
            } else {
                badge.style.display = 'none';
                showNotification('Parent mode disabled.');
            }
        }

        function toggleDarkMode(element) {
            element.classList.toggle('active');
            const root = document.documentElement;
            const body = document.body;
            
            if (element.classList.contains('active')) {
                root.classList.add('dark-mode');
                body.classList.add('dark-mode');
            } else {
                root.classList.remove('dark-mode');
                body.classList.remove('dark-mode');
            }
        }

        function showVoiceModal() {
            const modal = document.getElementById('voiceModal');
            modal.classList.add('active');
            
            // Simulate voice recording
            setTimeout(() => {
                modal.classList.remove('active');
                showNotification('Added: Spent ‚Çπ120 on lunch');
            }, 3000);
        }

        function showNotification(message) {
            // Create notification element
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: absolute;
                top: 60px;
                left: 50%;
                transform: translateX(-50%);
                background: linear-gradient(135deg, #10B981, #34D399);
                color: white;
                padding: 12px 20px;
                border-radius: 12px;
                font-size: 13px;
                font-weight: 600;
                z-index: 1000;
                animation: slideDown 0.3s ease-out;
            `;
            notification.textContent = message;
            
            // Add to phone screen
            document.querySelector('.phone-screen').appendChild(notification);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Initialize animations on load
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress bars
            setTimeout(() => {
                const progressBars = document.querySelectorAll('.progress-fill, .progress-fill-purple');
                progressBars.forEach(bar => {
                    bar.style.transition = 'width 1.5s ease-out';
                });
            }, 100);

            // Simulate real-time updates
            setInterval(() => {
                // Update time in status bar
                const now = new Date();
                const timeString = now.toLocaleTimeString('en-US', { 
                    hour: '2-digit', 
                    minute: '2-digit',
                    hour12: false 
                });
                document.querySelector('.status-bar span:first-child').textContent = timeString;
            }, 60000);
        });
    </script>
</body>
</html>
